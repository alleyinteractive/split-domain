<?xml version="1.0"?>
<ruleset name="switchboard">
	<description>Sniffs for the coding standards of the Switchboard plugin</description>

	<exclude-pattern>tests/*</exclude-pattern>
	<exclude-pattern>vendor/*</exclude-pattern>
	<exclude-pattern>node_modules/*</exclude-pattern>

	<rule ref="WordPress">
		<exclude name="WordPress.VIP.ValidatedSanitizedInput.MissingUnslash" />
	</rule>

	<rule ref="Generic.Commenting.DocComment.MissingShort">
		<exclude-pattern>lib/functions.php</exclude-pattern>
	</rule>

	<rule ref="Squiz.Commenting.FunctionComment.MissingParamTag">
		<exclude-pattern>lib/functions.php</exclude-pattern>
	</rule>
</ruleset>
